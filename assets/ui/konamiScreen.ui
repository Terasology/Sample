{
  "type": "KonamiScreen",
  "contents": {
    "type": "relativeLayout",
    "contents": [
      {
        "type": "UIBox",
        "layoutInfo": {
          "width": 300,
          "height": 300,
          "position-horizontal-center": {},
          "position-vertical-center": {}
        },
        "content": {
          "type": "relativeLayout",
          "contents": [
            {
              "type": "UILabel",
              "id": "konamiInfoLabel",
              "text": "Konami Mode",
              "layoutInfo": {
                "use-content-width": true,
                "position-horizontal-center": {},
                "height": 30
              }
            },
            {
              "type": "UIText",
              "text": "",
              "id": "infoArea",
              "layoutInfo": {
                "position-top": {
                  "widget": "konamiInfoLabel",
                  "target": "BOTTOM"
                },
                "position-bottom": {
                  "widget": "toggleKonamiButton",
                  "target": "TOP"
                }
              },
              "multiline": true,
              "readOnly": true
            },
            {
              "type": "UIButton",
              "id": "toggleKonamiButton",
              "text": "Toggle Konami Mode",
              "layoutInfo": {
                "use-content-height": true,
                "position-bottom": {}
              }
            }
          ]
        }
      }
    ]
  }
}